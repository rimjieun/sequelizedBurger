<div class="top-div">

  <img src="assets/img/chef.png" id="burger-chef" alt="burger-chef" width="150px">

  <h2>What burger would you like?</h2>

</div>

<div class="middle-div">
  <div class="left-div">
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour it!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right-div">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Clean</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="bottom-div">
  <form action="/" method="POST">
    <div class="form">
      <label for="burger">Burger:</label>
      <input type="text" id="burger" name="burger_name">
      <button type="submit">Order</button>
    </div>
  </form>
</div>